<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Precrastinator</title>
    <link rel="icon" type="image/x-icon" href="favicon.svg">

    <!-- Font Awesome v5 -->
	<script src="https://kit.fontawesome.com/cd1bf23aec.js" crossorigin="anonymous"></script>

    <!-- external CSS link -->
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <!-- login -->
    <section id="login">
        <div class="loginContainer">
            <div class="titles">
                <h1> <i class="fas fa-stopwatch"></i> Precrastinator</h1>
                <h3>Login</h3>
                <p> <a href="/logout"> <i class="fas fa-chevron-left"></i> </a> </p>
            </div>

            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>

                <form action="/login" method="POST">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="example@mail.com" class="email">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="password">
                    <input type="submit" class="loginBtn">
                </form>

            <div class="register">
                <h4>Don't have an account?</h4>
                <a href="/signup">Create account</a>
            </div>
        </div>
    </section>
</body>
</html>