<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Precrastinator</title>
    <link rel="icon" type="image/x-icon" href="favicon.svg">

    <!-- Font Awesome v5 -->
	<script src="https://kit.fontawesome.com/cd1bf23aec.js" crossorigin="anonymous"></script>

    <!-- external CSS link -->
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <!-- signupPage -->

    <section id="signupPage">
        <div class="signupContainer">

            <div class="signupTitles">
                <h1> <i class="fas fa-stopwatch"></i> Precrastinator</h1>
                <h3>Create Account</h3>
                <p> <a href="/logout"> <i class="fas fa-chevron-left"></i> </a> </p>
            </div>

            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <form action="/signup" method="POST">
                <label for="userName">Username</label>
                <input type="text" name="userName" placeholder="Username">
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="Email">
                <label for="password">Password</label>
                <input type="password" name="password" placeholder="Password">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" placeholder="Confirm Password">
                <input type="submit" class="signupBtn">
            </form>

            <div class="loginDirect">
                <h4>Already have an account?</h4>
                <a href="/login">Log in</a>
            </div>

        </div>

    </section>
 
</body>
</html>